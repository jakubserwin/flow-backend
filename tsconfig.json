{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "Node",
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "test.ts"]
}

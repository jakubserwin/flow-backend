    "express-rate-limit": "^6.6.0",
    "helmet": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.6.6",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.8.0",
    "pug": "^3.0.2",
    "rimraf": "^3.0.2",
    "sharp": "^0.31.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
